{% extends 'base.html.twig' %}

{% block content %}
    <h1 class="text-center">Envoyer une image</h1>

    <div class="container">
        <div class="row">
            <div class="col-lg-offset-3 col-lg-6 contactForm">

                {{ form_start(form) }} <br>

                <div class="form-group label-floating is-empty">
                    {{ form_label(form.title, "Title",
                    {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(form.title) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group label-floating is-empty">
                    {{ form_label(form.file, "Fichier image",
                    {'label_attr': {'class': 'control-label'}}) }}
                    <span style="color: #a22700">{{ form_errors(form.file) }}</span>
                    {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group text-right contactSubmit">
                    {{ form_widget(form.envoyer, {'attr': {'class': 'btn btn-primary btn-raised'}}) }}
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock content %}